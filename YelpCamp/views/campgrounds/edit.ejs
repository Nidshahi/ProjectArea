<body>
  <h1>Edit the Details</h1>
  <form action="/campgrounds/<%= place.id %>?_method=PUT" method="post">
    <div>
      <label for="name">Enter name:</label>
      <input type="text" value="<%= place.title %>" id="name" name="camp[title]">
    </div>
    <div>
      <label for="loc">Enter loaction:</label>
      <input type="text" value="<%= place.location %>" id="loc" name="camp[location]">
    </div>
    <button>Submit</button>
  </form>
</body>
