<%layout('layouts/boilerplate') %>


<main class="container mt-4">
  <form action="/campgrounds/<%= place._id %>?_method=PUT" method="post">
    <div class="row">
      <div class="col-6 offset-3">
        <h1 class="text-center">Edit Form</h1>
        <div class="mb-3">
          <label for="formGroupExampleInput" class="form-label">Enter the title</label>
          <input type="text" class="form-control" id="formGroupExampleInput" name="camp[title]" value="<%= place.title %>">
        </div>
        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label">Enter the location</label>
          <input type="text" class="form-control" id="formGroupExampleInput2"name="camp[location]" value="<%= place.location %>">
        </div>
        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label">Enter the price</label>
          <div class="input-group">
              <span class="input-group-text" id="price-label">$</span>
              <input type="number" class="form-control" id="formGroupExampleInput2"  name="camp[price]" value="<%= place.price %>" aria-describedby="price-label">
          </div>
        </div>
        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label">Image URL</label>
          <input type="text" class="form-control" id="formGroupExampleInput2"  name="camp[image]" value="<%= place.image %>">
        </div>
        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label">Description:</label>
          <input type="text" class="form-control" id="formGroupExampleInput2"  name="camp[desctiption]" value="<%= place.description %>">
        </div>
        
          <button type="submit" class="btn btn-warning btn-lg ">SUBMIT</button>
      </div>
    </div>
  </form>
  
</main>
  